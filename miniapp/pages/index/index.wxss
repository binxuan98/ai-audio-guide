.container { display: flex; flex-direction: column; height: 100vh; }
.coord     { padding: 8rpx 16rpx; font-size: 12px; color:#666; background:#fafafa; }
.spot-list { flex: 1; padding: 12rpx; background:#f5f5f5; }
.spot-item { background:#fff; padding: 16rpx; margin-bottom:12rpx;
             border-radius:8rpx; box-shadow: 0 1px 4px rgba(0,0,0,.05); }
