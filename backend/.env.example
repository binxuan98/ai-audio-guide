# AI语音导览后端环境变量配置示例
# 复制此文件为 .env 并填入真实的API密钥

# Flask应用配置
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# 通义千问API配置
QIANWEN_API_KEY=your_qianwen_api_key_here
QIANWEN_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# 文心一言API配置
WENXIN_API_KEY=your_wenxin_api_key_here
WENXIN_SECRET_KEY=your_wenxin_secret_key_here
WENXIN_BASE_URL=https://aip.baidubce.com/rpc/2.0/ai_custom/v1/wenxinworkshop

# 百度TTS API配置
BAIDU_TTS_API_KEY=your_baidu_tts_api_key_here
BAIDU_TTS_SECRET_KEY=your_baidu_tts_secret_key_here
BAIDU_TTS_BASE_URL=https://tsn.baidu.com/text2audio

# Azure TTS API配置
AZURE_TTS_API_KEY=your_azure_tts_api_key_here
AZURE_TTS_REGION=your_azure_region_here
AZURE_TTS_BASE_URL=https://your_region.tts.speech.microsoft.com

# 缓存配置
CACHE_EXPIRE_HOURS=24

# 文件路径配置
SPOTS_DATA_FILE=spots.json
AUDIO_FOLDER=static/audio
CACHE_FOLDER=static/cache

# 距离阈值配置（米）
DISTANCE_THRESHOLD=100

# 默认讲解风格
DEFAULT_GUIDE_STYLE=历史文化